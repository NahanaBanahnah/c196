<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/mainLayout"
    tools:context=".Control.TermDetail">

    <TextView
        android:id="@+id/termNameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        style="@style/TextAppearance.Material3.TitleLarge"
        android:textColor="@color/primaryLightColor"
        android:text="Course Title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/startDateButton"
        style="@style/TextAppearance.Material3.BodyLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Start Date:"
        android:textStyle="italic"
        android:textColor="@color/primaryColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/termNameText" />

    <TextView
        android:id="@+id/startDateText"
        style="@style/TextAppearance.Material3.LabelLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="MM/DD/YYYY"
        android:textColor="@color/primaryLightColor"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@+id/startDateButton"
        app:layout_constraintStart_toEndOf="@+id/startDateButton"
        app:layout_constraintTop_toTopOf="@+id/startDateButton" />

    <TextView
        android:id="@+id/endDateLabel"
        style="@style/TextAppearance.Material3.BodyLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="End Date:"
        android:textStyle="italic"
        android:textColor="@color/primaryColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/startDateButton" />

    <TextView
        android:id="@+id/endDateText"
        style="@style/TextAppearance.Material3.LabelLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MM/DD/YYYY"
        android:textColor="@color/primaryLightColor"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@+id/endDateLabel"
        app:layout_constraintStart_toStartOf="@+id/startDateText"
        app:layout_constraintTop_toTopOf="@+id/endDateLabel" />

</androidx.constraintlayout.widget.ConstraintLayout>